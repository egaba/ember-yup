<h1>Number Field</h1>
<p>NumberFields are components that wrap <kbd>Yup.number()</kbd> schemas.</p>
<h2>Examples</h2>
<wired-listbox horizontal selected={{example}}
style="--wired-item-selected-color: #212121; --wired-item-selected-bg: #A2F5BF;"
>
  <wired-item value="number" onclick={{action (mut example) "number"}}>basic</wired-item>
  <wired-item value="required" onclick={{action (mut example) "required"}}>required</wired-item>
  <wired-item value="integer" onclick={{action (mut example) "integer"}}>integer</wired-item>
  <wired-item value="positive" onclick={{action (mut example) "positive"}}>positive</wired-item>
  <wired-item value="negative" onclick={{action (mut example) "negative"}}>negative</wired-item>
  <wired-item value="min" onclick={{action (mut example) "min"}}>min</wired-item>
  <wired-item value="max" onclick={{action (mut example) "max"}}>max</wired-item>
  <wired-item value="gt" onclick={{action (mut example) "gt"}}>greater than</wired-item>
  <wired-item value="lt" onclick={{action (mut example) "lt"}}>less than</wired-item>
  <wired-item value="stacked" onclick={{action (mut example) "stacked"}}>stacked options</wired-item>
</wired-listbox>
{{#if (eq example "number")}}
  {{#code-demo markup=numberDemo}}
    {{#number-field
      enabled=true
      value=simpleNumber
      as |field|
    }}
      <wired-input
        type="text"
        placeholder="Enter a number"
        oninput={{action (mut simpleNumber) value="target.value"}}
        value={{simpleNumber}}
      ></wired-input>
      {{#each field.errorMessages as |error|}}
        <p>{{error}}</p>
      {{/each}}
    {{/number-field}}
  {{/code-demo}}
