  </div>
  <div class="w-1/3">
    <form>
      <label class="flex">
        enable validation
        <wired-toggle checked={{model.enabled}} onclick={{action (mut model.enabled) value="target.checked"}}></wired-toggle>
      </label>
      <fieldset>
        <legend>data type</legend>
        <wired-radio-group selected={{model.componentName}}>
          <wired-radio type="radio" name="text-field" onclick={{action (mut model.componentName) "text-field"}}>string</wired-radio>
          <wired-radio type="radio" name="number-field" onclick={{action (mut model.componentName) "number-field"}}>number</wired-radio>
          <wired-radio type="radio" name="date-field" onclick={{action (mut model.componentName) "date-field"}}>date</wired-radio>
          <wired-radio type="radio" name="boolean-field" onclick={{action (mut model.componentName) "boolean-field"}}>boolean</wired-radio>
        </wired-radio-group>
      </fieldset>
      <fieldset>
        <legend>options</legend>
        <label>
          <wired-checkbox checked={{model.required}} type="checkbox" onclick={{action (mut model.required) value="target.checked"}}>required</wired-checkbox>
        </label>
      </fieldset>
      <fieldset>
        <legend>populate errorMessages</legend>
        <wired-radio-group selected={{model.displayErrorMessages}}>
          <wired-radio type="radio" name="init" onclick={{action (mut model.displayErrorMessages) "init"}}>on init</wired-radio>
          <wired-radio type="radio" name="valueUpdate" onclick={{action (mut model.displayErrorMessages) "valueUpdate"}}>on value update</wired-radio>
        </wired-radio-group>
      </fieldset>
      <fieldset>
        <legend>validation messages</legend>
        <div class="">
          <label for="required-vmessage">required</label>
          <input type="text" id="required-vmessage" oninput={{action (mut model.requiredValidationMessage) value="target.value"}}>
        </div>
      </fieldset>
      <button type="button" name="button" {{action "apply"}}><wired-button>reload</wired-button></button>
      <!-- <button type="button" name="button" {{action "reset"}}><wired-button>reset</wired-button></button> -->
    </form>
