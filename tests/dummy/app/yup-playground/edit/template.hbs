<h1>Testing</h1>
{{#unless isReloading}}
<div class="flex">
  <div class="w-2/3">
    {{#component model.componentName
      validationMessages=(hash required=model.requiredValidationMessage)
      value=model.value
      required=model.required
      enabled=model.enabled
      showErrorMessages=(eq model.displayErrorMessages "init")
      showErrorMessagesOnUpdate=(eq model.displayErrorMessages "valueUpdate")
      as |field|
    }}
      <div class="">
        <div class="">
          {{#if (eq model.componentName "boolean-field")}}
            <wired-checkbox
              class="cursor-pointer"
              checked={{model.value}}
              onclick={{action (mut model.value) value="target.checked"}}
            >{{model.componentName}}</wired-checkbox>
          {{else}}
            <wired-input
              value={{model.value}}
              placeholder={{model.componentName}}
              oninput={{action (mut model.value) value="target.value"}}
            ></wired-input>
          {{/if}}
          {{#each field.errorMessages as |message|}}
            <p class="text-red">{{message}}</p>
          {{/each}}
        </div>
        <table class="table">
          <thead>
            <tr>
              <th>value</th>
              <th>typeof(value)</th>
              <th>didValidate</th>
              <th>hasErrors</th>
              <th>showErrorMessages</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>{{field.value}}</td>
              <td>{{fieldValueType}}</td>
              <td>{{field.didValidate}}</td>
              <td>{{field.hasErrors}}</td>
              <td>{{field.showErrorMessages}}</td>
            </tr>
          </tbody>
        </table>
      </div>
    {{/component}}



